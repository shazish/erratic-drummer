					            android:id="@+id/repeatText"
					            android:layout_width="wrap_content"
								android:textColor="#FFE573"	
					            android:layout_height="wrap_content"
					            android:gravity="left"
					            android:layout_marginRight="45dp"
					            android:fontFamily="sans-serif-condensed" 
					            android:textStyle="italic" 
					            android:textSize="34sp" />	
					            		 
						 </LinearLayout>			   											  				
					</RelativeLayout>
									
				</LinearLayout>

						
				    <LinearLayout
				        android:id="@+id/linearLayoutBUTTONSouter"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center"				
				        android:orientation="vertical"
				        android:paddingBottom="10dp"
				        android:paddingTop="10dp" >
				
				
				        <LinearLayout
				            android:id="@+id/linearLayoutBUTTONSinner"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:orientation="horizontal" >
				
				            <Button
				                android:id="@+id/lock_button"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_gravity="center"
				                android:gravity="left"
				                android:layout_weight="1"
				                android:background="@drawable/transparent"
				                android:drawableTop="@drawable/button_lock_off"
				                android:text="" />
				
				            <Button
				                android:id="@+id/play_button"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_gravity="center"
				                android:gravity="left"
				                android:layout_weight="1"
				                android:background="@drawable/transparent"
				                android:drawableTop="@drawable/button_play_off"
				                android:text="" />
				
				            <Button
				                android:id="@+id/fwd_button"
				                android:layout_gravity="center"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"				                
				                android:layout_weight="1"
				                android:background="@drawable/transparent"
				                android:drawableTop="@drawable/button_next_off"
				                android:paddingTop="2dp"
				                android:text="" />
				        </LinearLayout>
				        
				    </LinearLayout>
				
			
			        <LinearLayout
			            android:id="@+id/linearLayoutRepeatCounter"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:weightSum="1"
			            android:layout_gravity="center"
			            android:layoutDirection="rtl"
			            android:orientation="horizontal" >	
		
			   			 
				    </LinearLayout>
				    

		</LinearLayout>						 		
		
